<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/videoThumbnailIVID"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_video"
            android:contentDescription="@string/no_video" />

        <ImageView
            android:id="@+id/durationTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/videoThumbnailIVID"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:background="#8000"
            android:tint="#fff"
            android:src="@drawable/ic_videocam_black_24dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/video_camera_sign" />


</RelativeLayout>